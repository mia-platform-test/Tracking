{
  "node": {
    "cluster": "mia-api-gateway",
    "id": "mia-api-gateway-id"
  },
  "dynamic_resources": {
    "lds_config": {
      "resource_api_version": "V3",
      "path": "/etc/envoy/lds.json"
    },
    "cds_config": {
      "resource_api_version": "V3",
      "path": "/etc/envoy/cds.json"
    }
  },
  "layered_runtime": {
    "layers": [
      {
        "name": "static_layer",
        "static_layer": {
          "overload": {
            "global_downstream_max_connections": 4096
          }
        }
      }
    ]
  },
  "admin": {
    "address": {
      "socket_address": {
        "protocol": "TCP",
        "address": "0.0.0.0",
        "port_value": 9901
      }
    }
  }
}